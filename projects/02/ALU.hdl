/**
 * The ALU (Arithmetic Logic Unit).
 * Computes one of the following functions:
 * x+y, x-y, y-x, 0, 1, -1, x, y, -x, -y, !x, !y,
 * x+1, y+1, x-1, y-1, x&y, x|y on two 16-bit inputs, 
 * according to 6 input bits denoted zx,nx,zy,ny,f,no.
 * In addition, the ALU computes two 1-bit outputs:
 * if the ALU output == 0, zr is set to 1; otherwise zr is set to 0;
 * if the ALU output < 0, ng is set to 1; otherwise ng is set to 0.
 */

// Implementation: the ALU logic manipulates the x and y inputs
// and operates on the resulting values, as follows:
// if (zx == 1) set x = 0        // 16-bit constant
// if (nx == 1) set x = !x       // bitwise not
// if (zy == 1) set y = 0        // 16-bit constant
// if (ny == 1) set y = !y       // bitwise not
// if (f == 1)  set out = x + y  // integer 2's complement addition
// if (f == 0)  set out = x & y  // bitwise and
// if (no == 1) set out = !out   // bitwise not
// if (out == 0) set zr = 1
// if (out < 0) set ng = 1

CHIP ALU {
    IN  
        x[16], y[16],  // 16-bit inputs        
        zx, // zero the x input?
        nx, // negate the x input?
        zy, // zero the y input?
        ny, // negate the y input?
        f,  // compute out = x + y (if 1) or x & y (if 0)
        no; // negate the out output?

    OUT 
        out[16], // 16-bit output
        zr, // 1 if (out == 0), 0 otherwise
        ng; // 1 if (out < 0),  0 otherwise

    PARTS:
    // 4WayMux for log-pos, log-neg, num-pos for x and y
    // Zero with And16
    // Compute addition and AND
    // Compute negations of each
    // 4WayMux for f and no bits

    // Account input negation bits
    // Mux is pos/neg first sel bit, logical/numerical second sel bit
    Not16(in=x, out=lognegx);
    Inc16(in=lognegx, out=numnegx);
    Mux4Way16(a=x, b=lognegx, c=x, d=numnegx, sel[0]=nx, sel[1]=f, out=intx1);

    Not16(in=y, out=lognegy);
    Inc16(in=lognegy, out=numnegy);
    Mux4Way16(a=y, b=lognegy, c=y, d=numnegy, sel[0]=ny, sel[1]=f, out=inty1);

    // Account for zero bits
    Not16(in[0]=zx, in[1]=zx, in[2]=zx, in[3]=zx, in[4]=zx, in[5]=zx, in[6]=zx, in[7]=zx, in[8]=zx, in[9]=zx, in[10]=zx, in[11]=zx, in[12]=zx, in[13]=zx, in[14]=zx, in[15]=zx, out=izx);
    Not16(in[0]=zy, in[1]=zy, in[2]=zy, in[3]=zy, in[4]=zy, in[5]=zy, in[6]=zy, in[7]=zy, in[8]=zy, in[9]=zy, in[10]=zy, in[11]=zy, in[12]=zy, in[13]=zy, in[14]=zy, in[15]=zy, out=izy);
    And16(a=intx1, b=izx, out=intx2);
    And16(a=inty1, b=izy, out=inty2);

    // Account for f and output negation bits
    // Mux is pos/neg first sel bit, logical/numerical second sel bit
    And16(a=intx2, b=inty2, out=logposout);
    Add16(a=intx2, b=inty2, out=numposout);

    Not16(in=logposout, out=lognegout);
    Not16(in=numposout, out=numintout);
    Inc16(in=numintout, out=numnegout);
    Mux4Way16(a=logposout, b=lognegout, c=numposout, d=numnegout, sel[0]=no, sel[1]=f, out=out);
}
